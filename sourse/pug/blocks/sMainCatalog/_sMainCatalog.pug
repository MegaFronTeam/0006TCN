mixin sMainCatalog(data)
	// start sMainCatalog
	+b.sMainCatalog.section#sMainCatalog&attributes(attributes)
		.container
			.row
				.col-lg-3
					+sideBarSearch('true')
				.col-lg-9
					+page-head('Запчасти для BMW 3-Series 7&nbsp;поколение, 2018&nbsp;&mdash; н.в., B57D30 3.0&nbsp;л дизель', 'Автозапчасти', 'Запчасти BMW', 'Запчасти BMW 3-Series', '7 поколение, 2018 - н.в.')
