mixin sideBarSearchresult(name, count, icon)
	+e.link(href="#")&attributes(attributes)
		if icon 
			+icon('menu')
		!= name
		span!= count
mixin sideBarSearch(have, headline)
	+e.button.d-block.d-lg-none
		+icon('menu')
		| Выбрать категорию
	+e.side-bar
		+e.close
		+e.title.d-block.d-lg-none Категории запчастей
		if headline
			+e.headline!= headline
		+b.search-block
			form
				input(type="text" placeholder="Поиск товаров")
				button
					+icon("search")
		+e.wrap
			if have
				+sideBarSearchresult('Все запчасти', '324', 'true').d-flex.d-lg-none
				+sideBarSearchresult('Бампер', '16')
				+sideBarSearchresult('Бачок гидроусилителя', '3')
